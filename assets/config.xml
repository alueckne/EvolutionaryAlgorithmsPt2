<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <screen id="config" controller="de.unibi.gui.screencontroller.ConfigController">
  <layer id="foreground" backgroundColor="#a5cbf6" childLayout="vertical">
      <!-- ... -->
   
    <panel id="panel_top" height="10%" width="100%" align="center" childLayout="center"
             backgroundColor="#0078ff">  
			  <control name="label" color="#000" text="Configure the evolution:" width="100%" height="100%" align="left"  valign="center"/>
      </panel>
	  <panel id="panel_mid" height="70%" width="100%" align="left" childLayout="horizontal">
		  <panel id="panel_midin" height="100%" width="70%" align="left" childLayout="vertical"
				 backgroundColor="#0078ff">  
				 <panel id="panel_mid_pop" height="10%" width="100%" align="center" childLayout="center"
				 backgroundColor="#0078ff">  
				 <control name="label" id="poplabel" color="#000" text="Population Size:" width="40%" height="100%" align="left"  valign="center"/>
				 <control id="tfpop" name="textfield" maxLength="20" width="20%" height="100%" align="center" valign="center"/>
				</panel>
				 <panel id="panel_mid_sel" height="10%" width="100%" align="center" childLayout="center"
				 backgroundColor="#0078ff">  
				 <control name="label" id="sellabel" color="#000" text="Selection Size(Selection + Kids &lt;= PopulationSize):" width="40%" height="100%" align="left"  valign="center" />
				 <control id="tfsel" name="textfield"  maxLength="20" width="20%" height="100%" align="center" valign="center"/>
				</panel>
				<panel id="panel_mid_kids" height="10%" width="100%" align="center" childLayout="center"
				 backgroundColor="#0078ff">  
				 <control name="label" id="kidslabel" color="#000" text="Kids Size(Selection + Kids &lt;= PopulationSize):" width="40%" height="100%" align="left"  valign="center" />
				 <control id="tfkids" name="textfield"  maxLength="20" width="20%" height="100%" align="center" valign="center"/>
				</panel>
				<panel id="panel_mid_eval" height="10%" width="100%" align="center" childLayout="center"
				 backgroundColor="#0078ff">  
				 <control name="label" id="evallabel" color="#000" text="Evaluation Time( &gt;= 1):" width="40%" height="100%" align="left"  valign="center" />
				 <control id="tfeval" name="textfield"  maxLength="20" width="20%" height="100%" align="center" valign="center"/>
				</panel>
				<panel id="panel_mid_maxmut" height="10%" width="100%" align="center" childLayout="center"
				 backgroundColor="#0078ff">  
				 <control name="label" id="maxmutlabel" color="#000" text="Maximum Mutations per Creature( &gt;= 1):" width="40%" height="100%" align="left"  valign="center" />
				 <control id="tfmaxmut" name="textfield"  maxLength="20" width="20%" height="100%" align="center" valign="center"/>
				</panel>
				<panel id="panel_mid_maxTerr" height="10%" width="100%" align="center" childLayout="center"
				 backgroundColor="#0078ff">  
				 <control name="label" id="maxTerrlabel" color="#000" text="Maximum mutations per Terrain( &gt;= 1):" width="40%" height="100%" align="left"  valign="center"/>
				 <control id="tfmaxterr"  name="textfield" maxLength="20" width="20%" height="100%" align="center" valign="center"/>
				</panel>
				<panel id="panel_mid_terrMutStr" height="10%" width="100%" align="center" childLayout="center"
				 backgroundColor="#0078ff">  
				 <control name="label" id="terrMutStrlabel" color="#000" text="Terrain Mutation Strength - Between 0.01(a lot) and 1(none):" width="40%" height="100%" align="left"  valign="center"/>
				 <control id="tfMutStrTerr" name="textfield"  maxLength="20" width="20%" height="100%" align="center" valign="center"/>
				</panel>
				<panel id="panel_mid_creatMutStr" height="10%" width="100%" align="center" childLayout="horizontal"
				 backgroundColor="#0078ff">  
				 <control name="label" id="creatMutStrlabel" color="#000" text="Creature Mutation Strength - Between 0.01(a lot) and 1(none):" width="40%" height="100%" align="left"  valign="center"/>
				 <control id="tfMutStrCreat" name="textfield"  maxLength="20" width="20%" height="100%" align="center" valign="center" />
				</panel>
				<panel id="panel_mid_del" height="10%" width="100%" align="center" childLayout="horizontal"
				 backgroundColor="#0078ff">  
				 <control name="label" id="ldelThreshold" color="#000" text="Deletion Threshold(&lt;= 0):" width="40%" height="100%" align="left"  valign="center"/>
				 <control id="delThreshold" name="textfield"  maxLength="20" width="20%" height="100%" align="center" valign="center" />
				</panel>
				<panel id="panel_mid_name" height="10%" width="100%" align="center" childLayout="horizontal"
				 backgroundColor="#0078ff">  
				 <control name="label" id="lname" color="#000" text="Name the evolution:" width="40%" height="100%" align="left"  valign="center"/>
				 <control id="name" name="textfield"  maxLength="20" width="20%" height="100%" align="center" valign="center" />
				</panel>
		  </panel>
		  <panel id="panel_right" height="100%" width="30%" align="right" childLayout="vertical"
				 backgroundColor="#0078ff">  
				 <panel id="panel_right1" height="12%" width="100%" align="center" childLayout="horizontal"
				 backgroundColor="#0078ff">  
				 <control name="label" id="lcreatures" color="#000" text="Type of Individual:" width="40%" height="100%" align="left"  valign="center"/>
				 <control name="dropDown" label="Creatures" id="Creatures" width="40%" height="100%" align="right" valign="center"/> 
				</panel>
				 <panel id="panel_right2" height="12%" width="100%" align="center" childLayout="horizontal"
				 backgroundColor="#0078ff">  
					 <control name="label" id="lterrainColor" color="#000" text="Terrain color:" width="40%" height="100%" align="left"  valign="center"/>
					 <control name="dropDown" label="terrainC" id="TerrainColor" width="40%" height="100%" align="right" valign="center"/> 		 
				</panel>
				 <panel id="panel_right3" height="12%" width="100%" align="center" childLayout="horizontal"
				 backgroundColor="#0078ff">  
					 <control name="label" id="lTerrainSize" color="#000" text="Size of terrain:" width="40%" height="100%" align="left"  valign="center"/>
					 <control name="dropDown" label="TerrainSize" id="TerrainSize" width="40%" height="100%" align="right" valign="center"/> 
				</panel>	
				<panel id="panel_right4" height="12%" width="100%" align="center" childLayout="horizontal"
				 backgroundColor="#0078ff">  
					 <control name="label" id="lfitness" color="#000" text="Fitness Function:" width="40%" height="100%" align="left"  valign="center"/>
					 <control name="dropDown" label="Fitness" id="fitness" width="40%" height="100%" align="right" valign="center"/> 
				</panel>	
				<panel id="panel_right5" height="12%" width="100%" align="center" childLayout="horizontal"
				 backgroundColor="#0078ff">  
					 <control name="label" id="lmutation" color="#000" text="Mutation Function:" width="40%" height="100%" align="left"  valign="center"/>
					 <control name="dropDown" label="Mutation" id="mutation" width="40%" height="100%" align="right" valign="center"/> 
				</panel>
				<panel id="panel_right6" height="12%" width="100%" align="center" childLayout="horizontal"
				 backgroundColor="#0078ff">  
					 <control name="label" id="lrecombination" color="#000" text="Recombination Function:" width="40%" height="100%" align="left"  valign="center"/>
					 <control name="dropDown" label="recombination" id="recombination" width="40%" height="100%" align="right" valign="center"/> 
				</panel>
				<panel id="panel_right7" height="12%" width="100%" align="center" childLayout="horizontal"
				 backgroundColor="#0078ff">  
					 <control name="label" id="lselection" color="#000" text="Selection Function:" width="40%" height="100%" align="left"  valign="center"/>
					 <control name="dropDown" label="selection" id="selection" width="40%" height="100%" align="right" valign="center"/> 
				</panel>
		  </panel>
	  </panel>
      <panel id="panel_bottom" height="20%" width="100%" align="center" childLayout="vertical"
             backgroundColor="#0078ff">  
		<panel id="panel_bottom2" height="10%" width="20%" align="center" childLayout="horizontal"
             backgroundColor="#0078ff"> 
			<control name="button" label="Accept" id="AcceptButton" align="center" width="50%" > 
				<interact onClick="accept()"/>
			</control>
			<control name="button" label="Back" id="BackButton" width="50%"> 
				<interact onClick="back()"/>
			</control>
		</panel>
		<panel id="panel_bottom3" height="90%" width="100%" align="center" childLayout="center">
		<control name="label" id="Info" color="#c40000" text="" width="100%" height="100%" align="left"  valign="center"/>
		</panel>
      </panel>
	   </layer>
  </screen>
</nifty>